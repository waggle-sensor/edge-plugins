import waggle.plugin
import time
import logging

plugin = waggle.plugin.Plugin()

while True:
    for msg in plugin.get_waiting_messages():
        print('received message!', msg, flush=True)

    plugin.add_measurement({
        'id': 1,
        'sub_id': 1,
        'value': 12.3,
    })

    print('publish', flush=True)
    plugin.publish_measurements()

    time.sleep(5)
